<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fadeScrollbars="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:text="@string/app_dpi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rg_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_iqiyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="爱奇艺" />

                <RadioButton
                    android:id="@+id/rb_youku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优酷" />

                <RadioButton
                    android:id="@+id/rb_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="腾讯" />

                <RadioButton
                    android:id="@+id/rb_letv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乐视" />

                <RadioButton
                    android:id="@+id/rb_mgtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="芒果" />

                <RadioButton
                    android:id="@+id/rb_sohu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜狐" />

                <RadioButton
                    android:id="@+id/rb_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UA"
                    android:visibility="gone" />

            </RadioGroup>

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="testWeb"
                android:text="网页浏览" />
        </LinearLayout>

        <com.zhy.view.flowlayout.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="soiqiyi"
                android:text="爱奇艺搜索" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="soyouku"
                android:text="优酷搜索" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="soqq"
                android:text="腾讯搜索" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="soletv"
                android:text="乐视搜索" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="socbchot"
                android:text="中广热点云搜索" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="tvlive"
                android:text="电视直播" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="film"
                android:text="电影音悦" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="blue"
                android:text="不可描述" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="fmlist"
                android:text="收音机" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="soplus"
                android:text="soplus" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="mdd"
                android:text="埋堆堆港剧" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="somgtv"
                android:text="芒果搜索" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="sohu"
                android:text="搜狐搜索" />

            <Button
                android:id="@+id/btn_test_url"
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="testUrl"
                android:text="测试" />

        </com.zhy.view.flowlayout.FlowLayout>
    </LinearLayout>

</ScrollView>